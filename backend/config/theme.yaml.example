# =====================================================
# AXIS Theme Configuration
# Professional Design System
# =====================================================
#
# Copy this file to theme.yaml and customize as needed.
# Environment variables (AXIS_THEME_*) take precedence over YAML values.
#
# Usage:
#   Option 1: cp theme.yaml.example theme.yaml && edit theme.yaml
#   Option 2: export AXIS_THEME_ACTIVE=professional_blue
#   Option 3: export AXIS_THEME_PRIMARY="#3D5A80"
#
# Environment Variables:
#   AXIS_THEME_ACTIVE        - Active palette name (e.g., "professional_blue")
#   AXIS_THEME_PRIMARY       - Override primary color
#   AXIS_THEME_PRIMARY_LIGHT - Override primary light color
#   AXIS_THEME_PRIMARY_DARK  - Override primary dark color
#   AXIS_THEME_PRIMARY_SOFT  - Override primary soft color
#   AXIS_THEME_PRIMARY_PALE  - Override primary pale color
#   AXIS_THEME_ACCENT_GOLD   - Override accent gold color
#   AXIS_THEME_ACCENT_SILVER - Override accent silver color
#   AXIS_THEME_HERO_IMAGE    - URL/path to hero background image
#   AXIS_THEME_LOGO_URL      - URL/path to logo image
#   AXIS_THEME_FAVICON_URL   - URL/path to favicon (browser tab icon)
#   AXIS_THEME_APP_ICON_URL  - URL/path to app icon (sidebar logo)
#   AXIS_THEME_HERO_CONTRAST   - Hero image contrast filter (1.0 = normal)
#   AXIS_THEME_HERO_SATURATION - Hero image saturation filter (1.0 = normal)
#   AXIS_THEME_HERO_BRIGHTNESS - Hero image brightness filter (1.0 = normal)
#   AXIS_THEME_HERO_OPACITY    - Hero image opacity (1.0 = fully visible)
#   AXIS_THEME_HERO_MODE       - Hero section mode: 'dark' (default) or 'light'

theme:
  # Active palette name - must match a key in 'palettes' below
  active: "sage_green"

  # Branding â€” customize text shown throughout the app
  branding:
    app_name: "AXIS"
    tagline: "AI Evaluation Platform"
    subtitle: "The AI Evaluation Studio"
    description: "Agent X-ray Interface & Statistics"
    report_footer: "Report generated by AXIS AI Evaluation Platform"
    docs_url: "https://ax-foundry.github.io/axis/"
    # footer_name: "AXIS"  # Overrides app_name in the footer. Falls back to app_name if omitted.
    # footer_icon: "/api/config/assets/branding/footer-icon.png"  # Overrides appIconUrl in the footer. Falls back to appIconUrl if omitted.

  palettes:
    # -----------------------------------------------------
    # Sage Green - Default AXIS palette
    # Natural, approachable, growth-oriented
    # -----------------------------------------------------
    sage_green:
      name: "Sage Green"
      primary: "#8B9F4F"
      primaryLight: "#A4B86C"
      primaryDark: "#6B7A3A"
      primarySoft: "#B8C78A"
      primaryPale: "#D4E0B8"
      accentGold: "#D4AF37"
      accentSilver: "#B8C5D3"
      # Branding (optional)
      # heroImage: "/api/config/assets/branding/hero.jpg"
      # logoUrl: "/api/config/assets/branding/logo.png"
      # faviconUrl: "/api/config/assets/branding/favicon.ico"
      # appIconUrl: "/api/config/assets/branding/app-icon.png"
      # Hero image filters (1.0 = normal)
      # heroContrast: 0.9
      # heroSaturation: 0.8
      # heroBrightness: 1.0
      # heroOpacity: 0.9

    # -----------------------------------------------------
    # Professional Blue - Professional enterprise palette
    # Trust, stability, expertise
    # Designed to impress enterprise clients & investors
    # -----------------------------------------------------
    professional_blue:
      name: "Professional Blue"
      primary: "#3D5A80"        # Deep professional blue
      primaryLight: "#5C7AA3"   # Lighter interactive state
      primaryDark: "#2B3C73"    # Darker emphasis/headers
      primarySoft: "#8BA4C4"    # Soft backgrounds/highlights
      primaryPale: "#C5D4E8"    # Subtle backgrounds
      accentGold: "#D4AF37"     # Premium accent for CTAs
      accentSilver: "#B8C5D3"   # Secondary accent
      # Branding (optional)
      # heroImage: "/api/config/assets/branding/hero.jpg"
      # logoUrl: "/api/config/assets/branding/logo.png"
      # faviconUrl: "/api/config/assets/branding/favicon.ico"
      # appIconUrl: "/api/config/assets/branding/app-icon.png"
      # Hero image filters (1.0 = normal)
      # heroContrast: 0.8
      # heroSaturation: 0.8
      # heroBrightness: 1.0
      # heroOpacity: 1.0

    # -----------------------------------------------------
    # Example: Custom branded palette
    # -----------------------------------------------------
